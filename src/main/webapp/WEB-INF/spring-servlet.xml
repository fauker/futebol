<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jpa="http://www.springframework.org/schema/data/jpa"
	xmlns:task="http://www.springframework.org/schema/task"
	xmlns:mvc="http://www.springframework.org/schema/mvc" 
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc 
						http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
						http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
						http://www.springframework.org/schema/context 
						http://www.springframework.org/schema/context/spring-context-4.0.xsd
						http://www.springframework.org/schema/tx 
						http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
						http://www.springframework.org/schema/aop
						http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
						http://www.springframework.org/schema/data/jpa
    					http://www.springframework.org/schema/data/jpa/spring-jpa.xsd
    http://www.springframework.org/schema/task
    http://www.springframework.org/schema/task/spring-task-3.0.xsd ">

	<context:component-scan base-package="br.com.fauker" />
	<context:annotation-config />
	<jpa:repositories base-package="br.com.fauker.futebol.repository" />
	<mvc:annotation-driven />

	 <bean class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor" />

	<!-- configurações do flyway -->	
	
<!-- 	<bean id="flyway" class="com.googlecode.flyway.core.Flyway" init-method="migrate"> -->
<!-- 	     <property name="dataSource" ref="dataSource" /> -->
<!-- 	     <property name="disableInitCheck" value="true" /> -->
<!-- 	     <property name="locations" value="db/migrations" /> -->
<!-- 	</bean>	 -->

	<bean id="dataSource" class = "com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
		<property name="driverClass" value="com.mysql.jdbc.Driver"/>
		<property name="jdbcUrl" value="jdbc:mysql://localhost/futebol"/>
		<property name="user" value="root"/>
		<property name="password" value="root"/>
		<!-- Propriedades do C3P0 -->
		<property name="acquireIncrement" value="1"/> <!-- Determina quantas conexões por vez o c3p0 tenta adquirir quando o pool não tem conexões inativas para serem usadas. -->
		<property name="minPoolSize" value="5"/>
		<property name="maxPoolSize" value="50"/>
		<property name="maxIdleTime" value="60"/> <!-- Segundos que uma conexao será mantida no pool sem ser usada, antes de ser descartada -->
		<property name="idleConnectionTestPeriod" value="300"/> <!--  c3p0 irá testar todas as conexões inativas, que estão no pool e não fizeram o check-out, de X em X segundos, onde X é o valor de idleConnectionTestPeriod. -->
	</bean>

	<!-- gerenciamento do JPA pelo spring -->
	<bean id="entityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
		<property name="persistenceUnitName" value="futebolPU"></property>
		<property name="dataSource" ref="dataSource" />
		<property name="jpaVendorAdapter">
			<bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter" />
		</property>
		<property name="packagesToScan" value="br.com.fauker.futebol.domain" />
        <!-- Propriedades da JPA para o Hibernate -->
        <property name="jpaProperties">
            <props>
                <prop key="hibernate.show_sql">true</prop>
                <prop key="hibernate.format_sql">true</prop>
                <prop key="hibernate.hbm2ddl.auto">update</prop>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</prop>
            </props>
        </property>		
	</bean>		
	
	<!-- gerenciamento da transação pelo spring -->
	<bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
		<property name="entityManagerFactory" ref="entityManagerFactory" />	
	</bean>
	
	<!-- configuração para o spring reconhecer o messages.properties para fazer validações -->
	
	<bean id="messageSource"
        class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
        <property name="basename" value="/WEB-INF/messages" />
 	</bean>
 	
</beans>
